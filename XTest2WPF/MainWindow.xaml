        <TreeView FontSize="20" Grid.Row="0" Background="#FFEBF6F6">
            <Label>Теория информации и кодирования</Label>
            <TreeViewItem>
                <TreeViewItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="img/icons/folder.png" Width="22" Margin="0 0 8 0"/>
                        <TextBlock>Систематические коды</TextBlock>
                    </StackPanel>
                </TreeViewItem.Header>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/icons/file.png" Width="20" Margin="0 0 5 0"/>
                            <TextBlock>Код Эллайеса</TextBlock>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/icons/file.png" Width="20" Margin="0 0 5 0"/>
                            <TextBlock>Код Варшамова</TextBlock>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>

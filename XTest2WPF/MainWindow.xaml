                    </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="img/icons/file.png" Width="20" Margin="0 0 5 0"/>
                            <TextBlock>Кнальные коды</TextBlock>
                        </StackPanel>
                    </TreeViewItem.Header>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
        <StackPanel Grid.Row="1" Width="600" Margin="20" Orientation="Horizontal">
            <Button Width="120" Margin="0 0 40 0" Cursor="Hand" FontSize="22" Foreground="#FF3D3DAA" Background="#FFF9F2F2" BorderBrush="#FFBB8585" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFBDBDE8"/>
                                <Setter Property="Foreground" Value="#FFF9F2F2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>Теория</Button>
            <Button Width="120" Margin="0 0 40 0" Cursor="Hand" FontSize="22" Foreground="#FF3D3DAA" Background="#FFF9F2F2" BorderBrush="#FFBB8585" FontWeight="Bold">Отчет</Button>
            <Button Width="120" Margin="0 0 40 0" Cursor="Hand" FontSize="22" Foreground="#FF3D3DAA" Background="#FFF9F2F2" BorderBrush="#FFBB8585" FontWeight="Bold">Обучение</Button>
            <Button Width="120" FontSize="22" Cursor="Hand" Foreground="#FF3D3DAA" Background="#FFF9F2F2" BorderBrush="#FFBB8585" FontWeight="Bold">Тест</Button>
        </StackPanel>
    </Grid>
</Window>
